yellow='\e[033;35m'
white='\e[033;36m'

###################################################
# CTRL C
###################################################
trap ctrl_c INT
ctrl_c() {
clear
echo -e $red"[#]> (Ctrl + C ) Detected, Trying To Exit ... "
sleep 1
echo ""
echo -e $lightgreen"[#]> Tools Berfaedah ... "
sleep 1
echo ""
echo -e $white"[#]> Mr.HurT3d Atau Firzii"
