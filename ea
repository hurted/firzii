echo""
echo -e $red"[+]=======================================[+]"
echo -e $green" 01) Spam Chat Wa"

echo -e $red"[+]=======================================[+]"
echo -e $cyan" 03) Gps Tracking"
echo -e $red"[+]=======================================[+]
echo -e $red"  00) Keluar sterr... "
echo -e $yellow"[+]=================================[+]"
echo""
read -p "[Mr.HurT3d@Firzik]> " act;

if [ $act = 01 ] || [ $act = 01 ]
then
clear
